extends layout 

block content 
 h1= title
 form(action="", method="post") 
  .form-group 
   label(for="firstName") First name 
   input#firstName.form-control(type="text", name="firstName" value=(user===undefined? '' : user.firstName)) 
   label(for="lastName") Last name 
   input#lastName.form-control(type="text", name="lastName" value=(user===undefined? '' : user.lastName)) 
   label(for="username") User name 
   input#username.form-control(type="text", name="username" value=(user===undefined? '' : user.username)) 
   label(for="password") Password 
   input#password.form-control(type="password", name="password" ) 
   .form-text Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
   label(for="confirmedPassword") Confirmed Password 
   input#confirmedPassword.form-control(type="password", name="confirmedPassword" ) 
   hr
   button.btn.btn-primary(type="submit") Submit

 if errors 
  ul 
   for error in errors 
    li!= error.msg